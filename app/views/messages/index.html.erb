<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
  <!--メッセージの一覧画面を作成 -->
</div>

<%= form_for(@message) do |f| %>
  名前:
  <%= f.text_field :name %>
  内容:
  <%= f.text_area :body, :size => "50x5" %>
  <!-- 本文入力部分:bodyを<textarea>タグに変更するためにf.text_areaに変更 -->
  <!-- 入力部分の大きさを広げたいので、＃:size => "50x5"＃を追加 -->
  <%= f.submit %>
<% end %>